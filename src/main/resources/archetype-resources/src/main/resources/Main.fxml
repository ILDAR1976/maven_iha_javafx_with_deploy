<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>

<fx:root prefHeight="272.0" prefWidth="500.0" type="BorderPane" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Label prefHeight="27.0" prefWidth="132.0" text="Hellow world application" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <TextArea fx:id="outText" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <BorderPane prefHeight="52.0" prefWidth="500.0" BorderPane.alignment="CENTER">
         <top>
            <TextField fx:id="edit" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets top="5.0" />
               </BorderPane.margin>
            </TextField>
         </top>
         <center>
            <FlowPane alignment="TOP_CENTER" columnHalignment="CENTER" prefHeight="10.0" prefWidth="500.0" BorderPane.alignment="CENTER">
               <children>
                  <Button contentDisplay="RIGHT" mnemonicParsing="false" onAction="#handleAddText" prefHeight="25.0" prefWidth="88.0" text="Add">
                     <FlowPane.margin>
                        <Insets right="5.0" />
                     </FlowPane.margin>
                  </Button>
                  <Button contentDisplay="RIGHT" mnemonicParsing="false" onAction="#handleExit" prefHeight="25.0" prefWidth="85.0" text="Exit">
                     <FlowPane.margin>
                        <Insets left="5.0" />
                     </FlowPane.margin>
                  </Button>
               </children>
               <BorderPane.margin>
                  <Insets bottom="5.0" top="5.0" />
               </BorderPane.margin>
            </FlowPane>
         </center>
      </BorderPane>
   </bottom>
</fx:root>
